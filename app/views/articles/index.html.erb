
<% @articles.each do |article| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <article>
          <h2>
            <%= link_to "#{article.title}", article_path(article) %>
          </h2>
          <%= article.content %>
        </article>
      </div>
    </div>
  </div>
<% end %>
